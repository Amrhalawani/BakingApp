<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <fragment
        android:id="@+id/FragmentDetail"
        android:name="com.nd.amrhal.bakingapp.RecipeDetailFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:tag="fragment_tag_fragmentDetail"
        android:layout_weight="1"
        />

    <LinearLayout
        android:id="@+id/linearLayoutforStepfragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <fragment
            android:id="@+id/FragmentStepDetail"
            android:name="com.nd.amrhal.bakingapp.RecipeStepDetailFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:tag="fragment_tag_fragmentStepDetail"
             />
    </LinearLayout>

</LinearLayout>